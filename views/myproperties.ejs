<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Hosted Properties</title>

    <!-- Bootstrap 4/5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom dark theme CSS -->
    <style>
        body {
            background-color: #121212;
            color: #eaeaea;
        }

        .property-card {
            background-color: #2c2c2c;
            border-radius: 10px;
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease-in-out;
        }

        .property-card:hover {
            transform: scale(1.05);
        }

        .property-image {
            max-height: 250px;
            object-fit: cover;
            border-radius: 8px;
            width: 100%;
        }

        .card-header, .card-body {
            background-color: #333;
            border-radius: 10px;
        }

        .card-title, .card-text {
            color: #eaeaea;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        .no-properties {
            color: #eaeaea;
            text-align: center;
        }
    </style>
</head>

<body>

    <div class="container mt-5">
        <h1 class="text-center mb-4">My Hosted Properties</h1>

        <% if (properties && properties.length > 0) { %>
            <div class="row">
                <% properties.forEach(property => { %>
                    <div class="col-md-4">
                        <div class="property-card card">
                            <div class="card-header">
                                <h3 class="card-title"><%= property.property_type %> in <%= property.address %></h3>
                            </div>
                            <div class="card-body">
                                <!-- Display each image for the property -->
                                <div class="property-images mb-3">
                                    <% property.images.forEach((image, index) => { %>
                                        <img src="data:image/jpeg;base64,<%= image %>" alt="Property Image <%= index + 1 %>" class="property-image">
                                    <% }) %>
                                </div>

                                <p><strong>Requirement:</strong> <%= property.requirement %></p>
                                <p><strong>Description:</strong> <%= property.description %></p>
                                <p><strong>Rent per Day:</strong> $<%= property.rent_per_day %></p>
                                <p><strong>Rent per Week:</strong> $<%= property.rent_per_week %></p>
                                <p><strong>Rent per Month:</strong> $<%= property.rent_per_month %></p>
                                <p><strong>Occupancy:</strong> <%= property.occupancy %> persons</p>
                                <p><strong>Availability Date:</strong> <%= new Date(property.availability_date).toDateString() %></p>
                                <p><strong>Pets Allowed:</strong> <%= property.pets_allowed ? "Yes" : "No" %></p>
                                <p><strong>Smoking Allowed:</strong> <%= property.smoking_allowed ? "Yes" : "No" %></p>
                                
                                <!-- Button for "People Interested" -->
                                <a href="/people_interested/<%= property.property_id %>">See Interested Users</a>

                                
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p class="no-properties">No properties available.</p>
        <% } %>
    </div>

    <!-- Bootstrap JS, Popper, and jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

</body>

</html>
