<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Profile</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        /* General styling */
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(to right, #0c0c0c, #1c1c1c);
            color: #f0f0f0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            overflow: hidden;
        }

        /* Container styling */
        .container {
            background-color: #1a1a1a;
            padding: 25px;
            border-radius: 20px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.7);
            width: 100%;
            max-width: 75%;
            animation: fadeInContainer 1s ease;
        }

        /* Header styling */
        h1 {
            text-align: center;
            margin-bottom: 25px;
            color: #03dac5;
            font-size: 1.8em;
            font-weight: bold;
        }

        /* Input group styling */
        .input-group {
            display: none;
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.5s ease, transform 0.5s ease;
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

        .input-group.active {
            display: flex;
            opacity: 1;
            transform: translateY(0);
            animation: slideInUp 0.5s ease forwards;
        }

        /* Icon styling */
        .input-group i {
            margin-right: 10px;
            color: #03dac5;
            font-size: 1.2em;
        }

        /* Input field styling */
        input[type="text"],
        input[type="number"],
        select,
        input[type="file"] {
            width: 100%;
            padding: 12px;
            background-color: #2e2e2e;
            border: none;
            border-radius: 20px;
            color: #e0e0e0;
            font-size: 1em;
            transition: box-shadow 0.3s, transform 0.2s;
        }

        input[type="text"]:focus,
        input[type="number"]:focus,
        select:focus {
            box-shadow: 0 0 10px rgba(29, 35, 68, 0.8);
            outline: none;
        }

        /* Button styling */
        #nextButton, #submitButton {
            width: 100%;
            padding: 12px;
            background-color: #03dac5;
            color: #121212;
            border: none;
            border-radius: 20px;
            cursor: pointer;
            font-size: 1em;
            font-weight: bold;
            transition: background-color 0.3s, transform 0.3s;
            margin-top: 15px;
            animation: fadeInButton 0.6s ease;
        }

        #nextButton:hover {
            background-color: #5b2f87;
            transform: scale(1.05);
        
        }

        /* Submit button adjustments */
        #submitButton {
            display: none;
            background-color: #ff6d00;
            color: #fff;
        }

        #submitButton:hover {
            background-color: #ff5700;
        }

        /* Animations */
        @keyframes slideInUp {
            0% {
                opacity: 0;
                transform: translateY(30px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeInContainer {
            from {
                opacity: 0;
                transform: scale(0.9);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        @keyframes fadeInButton {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
    <div class="container ">
        <h1>Create Your Profile</h1>
        <form id="profileForm" action="/submit_profile" method="POST" enctype="multipart/form-data">
            <div class="input-group active">
                <i class="fas fa-user"></i>
                <input type="text" id="full_name" name="full_name" placeholder="Full Name" required>
            </div>

            <div class="input-group">
                <i class="fas fa-birthday-cake"></i>
                <input type="number" id="age" name="age" placeholder="Age" required>
            </div>

            <div class="input-group">
                <i class="fas fa-camera"></i>
                <input type="file" id="profile_picture" name="profile_picture" required>
            </div>

            <div class="input-group">
                <i class="fas fa-phone"></i>
                <input type="text" id="phone" name="phone" placeholder="Phone">
            </div>

            <div class="input-group">
                <i class="fas fa-school"></i>
                <input type="text" id="university" name="university" placeholder="University">
            </div>

            <div class="input-group">
                <i class="fas fa-home"></i>
                <input type="text" id="address" name="address" placeholder="Address">
            </div>

            <div class="input-group">
                <i class="fas fa-smoking"></i>
                <select id="smoker" name="smoker" required>
                    <option value="">Smoker?</option>
                    <option value="Rarely">Rarely</option>
                    <option value="Yes">Yes</option>
                    <option value="Non-Smoker">Non-Smoker</option>
                </select>
            </div>

            <div class="input-group">
                <i class="fas fa-utensils"></i>
                <select id="food" name="food" required>
                    <option value="">Food Preference</option>
                    <option value="Veg">Veg</option>
                    <option value="Non-Veg">Non-Veg</option>
                </select>
            </div>

            <div class="input-group">
                <i class="fas fa-id-card"></i>
                <input type="text" id="adhar_number" name="adhar_number" placeholder="Aadhar Number">
            </div>
            
            <div class="input-group">
                <i class="fab fa-twitter"></i>
                <input type="text" id="twitter" name="twitter" placeholder="Twitter">
            </div>

            <div class="input-group">
                <i class="fab fa-instagram"></i>
                <input type="text" id="instagram" name="instagram" placeholder="Instagram">
            </div>

            <div class="input-group">
                <i class="fab fa-facebook"></i>
                <input type="text" id="facebook" name="facebook" placeholder="Facebook">
            </div>

            <button type="button" id="nextButton">Next</button>
            <button type="submit" id="submitButton">Submit</button>
        </form>
    </div>

    <script>
        const inputGroups = document.querySelectorAll('.input-group');
        const nextButton = document.getElementById('nextButton');
        const submitButton = document.getElementById('submitButton');
        let currentIndex = 0;

        // Function to show the next input field
        function showNextInput() {
            if (currentIndex < inputGroups.length - 1) {
                currentIndex++;
                inputGroups[currentIndex].classList.add('active'); // Show next input group
                
                // Check if we reached the last input to toggle buttons
                if (currentIndex === inputGroups.length - 1) {
                    nextButton.style.display = 'none';
                    submitButton.style.display = 'block';
                }
            }
        }

        // Event listener for the next button
        nextButton.addEventListener('click', showNextInput);
    </script>
</body>
</html>
