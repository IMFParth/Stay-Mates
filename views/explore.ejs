<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Explore Users</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #121212;
            color: #d1d1d1;
            margin: 0;
            padding-top: 70px; /* Space for the navbar */
        }

        h1 {
            text-align: center;
            color: #ffffff;
            margin-bottom: 30px;
        }

        .user-list {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #1e1e1e;
            border-radius: 12px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.5);
        }

        .user-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 15px;
            border-bottom: 1px solid #444;
        }

        .user-item:last-child {
            border-bottom: none; /* Remove border for the last item */
        }

        .profile-pic {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            cursor: pointer;
            transition: transform 0.2s;
        }

        .profile-pic:hover {
            transform: scale(1.05);
        }

        .user-item strong {
            color: #ffffff;
            margin-left: 10px;
        }

        .add-friend-button {
            background-color: #2196f3;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 8px 12px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .add-friend-button:hover {
            background-color: #0b7dda;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" href="./index.html">StayMates</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="./index.html">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="./explore.html">Explore</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="./host.html">Hosting</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Use Case 3</a>
                    </li>
                </ul>
                <ul class="navbar-nav mb-2 mb-lg-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="./profile.html" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="https://github.com/mdo.png" id="navimage" width="32" height="32" class="rounded-circle me-2">
                            <strong>Me</strong>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="./inbox.html">Inbox</a></li>
                            <li><a class="dropdown-item" href="./friendlist.html">Friend list</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Sign out</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="user-list">
        <h1>Explore Users</h1>
        <ul>
            <% users.forEach(user => { %>
                <li class="user-item">
                    <img src="data:image/jpeg;base64,<%= user.profile_picture.toString('base64') %>" alt="<%= user.full_name %>'s profile picture" class="profile-pic" onclick="window.location.href='./profile.html?id=<%= user.id %>'">
                    <strong><%= user.full_name %> (Age: <%= user.age %>)</strong> 
                    <button class="add-friend-button" onclick="addFriend(<%= user.id %>)">Add Friend</button>
                </li>
            <% }) %>
        </ul>
    </div>

    <script>
        async function addFriend(userId) {
            try {
                const response = await fetch(`/friend/add/${userId}`, { method: 'POST' });
                if (response.ok) {
                    alert("Friend request sent!");
                } else {
                    alert("Error sending friend request.");
                }
            } catch (error) {
                console.error("Error adding friend:", error);
            }
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
