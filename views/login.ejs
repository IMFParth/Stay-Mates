</head>
<body>

    <!--  login page -->
<div class="form-container">
    <div class="form-col  ">
        <div class="btn-box ">
            <button type="button" class="btn  btn-light" id="loginn">Log In</button>
            <button type="button" class="btn btn-light"  id="register" >Sign Up</button>
            
        </div>
         <!--  login page -->
        <form class="form-box Login-form" action="/submit" method="POST"> 
            <div class="form-title ">
                <span> Log In</span>
            </div>
            <div class="form-floating mb-3">
                <input type="username" class="form-control" id="floatingInput" name="loginusername" placeholder="username">
                <label for="floatingInput"> Username</label>
              </div>
              <div class="form-floating">
                <input type="password" class="form-control" id="floatingPassword" name="loginpassword" placeholder="Password">
                <label for="floatingPassword">Password</label>
              </div>
              <div class="forgot-password">
                 
                <button type="submit" id="submit-button" class="btn btn-success">Submit</button>

             </div>
<hr >

<div class="social-login">
